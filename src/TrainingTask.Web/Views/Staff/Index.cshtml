@using TrainingTask.Web.Controllers
@model IEnumerable<TrainingTask.Web.Model.EmployeeListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Staff</h1>

<p>
    <a asp-action="@StaffController.CreateAction">Add New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.ActionLink("Edit", StaffController.EditAction, new {id = item.Id}) |
                @Html.ActionLink("Delete", StaffController.DeleteAction, new {id = item.Id})
            </td>
        </tr>
    }
    </tbody>
</table>